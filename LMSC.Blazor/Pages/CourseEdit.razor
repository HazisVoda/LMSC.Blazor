@page "/editcourse/{id}"

@inherits CourseEditBase

<EditForm Model="@Course">
    <h3>Edit Course</h3>
    <hr />
    <div class="form-group row">
        <label for="name" class="col-sm-2 col-form-label">
            Course Name
        </label>
        <div class="col-sm-10">
            <InputText id="name" class="form-control" placeholder="Course Name" @bind-Value="Course.CourseName"></InputText>
        </div>
    </div>
    <div class="form-group row">
        <label for="details" class="col-sm-2 col-form-label">
            Course Details
        </label>
        <div class="col-sm-10">
            <InputText id="details" class="form-control" placeholder="Course Details" @bind-Value="Course.CourseDetails"></InputText>
        </div>
    </div>
</EditForm>

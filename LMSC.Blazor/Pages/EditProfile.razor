@page "/profile/edit"
@inherits EditProfileBase
@using LMSC.Models

<h3>Edit Profile</h3>
<hr />

<EditForm Model="@EditUserModel" OnValidSubmit="HandleValidSubmit">
    <DataAnnotationsValidator />
    <ValidationSummary />
    <div class="form-group row">
        <label for="FirstName" class="col-sm-2 col-form-label">First Name</label>
        <div class="col-sm-10">
            <InputText id="FirstName" class="form-control" placeholder="First Name" @bind-Value="EditUserModel.FirstName"></InputText>
            <ValidationMessage For="@(() => EditUserModel.FirstName)" />
        </div>
    </div>
    <div class="form-group row">
        <label for="LastName" class="col-sm-2 col-form-label">Last Name</label>
        <div class="col-sm-10">
            <InputText id="LastName" class="form-control" placeholder="Last Name" @bind-Value="EditUserModel.LastName"></InputText>
            <ValidationMessage For="@(() => EditUserModel.LastName)" />
        </div>
    </div>
    <div class="form-group row">
        <label for="Email" class="col-sm-2 col-form-label">Email</label>
        <div class="col-sm-10">
            <InputText id="Email" class="form-control" placeholder="Email" @bind-Value="EditUserModel.Email"></InputText>
            <ValidationMessage For="@(() => EditUserModel.Email)" />
        </div>
    </div>
    <div class="form-group row">
        <label for="ConfirmEmail" class="col-sm-2 col-form-label">Confirm Email</label>
        <div class="col-sm-10">
            <InputText id="ConfirmEmail" class="form-control" placeholder="Confirm Email" @bind-Value="EditUserModel.ConfirmEmail"></InputText>
            <ValidationMessage For="@(() => EditUserModel.ConfirmEmail)" />
        </div>
    </div>
    <div class="form-group row">
        <label for="DateOfBirth" class="col-sm-2 col-form-label">Date of Birth</label>
        <div class="col-sm-10">
            <InputDate id="DateOfBirth" class="form-control" placeholder="Date Of Birth" @bind-Value="EditUserModel.DateOfBirth"></InputDate>
            <ValidationMessage For="@(() => EditUserModel.DateOfBirth)" />
        </div>
    </div>
    <button class="btn btn-primary" type="submit">Submit</button>
</EditForm>
